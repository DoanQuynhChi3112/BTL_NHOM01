@model IEnumerable<BTLNHOM01.Models.DanhMucHang>

@{
    ViewData["Title"] = "Index";
}

<style>
#customers {
  font-family: Arial, Helvetica, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

#customers td, #customers th {
  border: 1px solid #ddd;
  padding: 8px;
}

#customers tr:nth-child(even){background-color: #f2f2f2;}

#customers tr:hover {background-color: #ddd;}

#customers th {
  padding-top: 12px;
  padding-bottom: 12px;
  text-align: left;
  background-color: hsl(0, 60%, 50%);
  color: white;
}
</style>

<h2 class="w3-center w3-text-tomato" style=" font-family: Times New Roman; font-size:50px "> Danh Mục Hàng</h2>
<p>
    <a asp-action="Create">Tạo dữ liệu mới</a>
</p>
<table id="customers">
  <tr>
    <th> Mã hàng </th>
    <th> Tên hàng </th>
    <th> Đơn vị tính </th>
    <th> Số lượng </th>
    <th> Giá SP </th>
    <th> Action </th>
  </tr> 
  <tr>           

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaHang)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TenHang)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DonViTinh)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SoLuong)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GiaSP)
    </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaHang">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaHang">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaHang">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
